<article id="movie" class="movie">
  <header>
    <%= image_for(@movie) %>
    <h1><%= @movie.title %></h1>
    <h2>Released: <%= @movie.released_on %></h2>
  </header>

  <p>
    <%= @movie.description %>
  </p>

  <h3 class="no-rule">
    <%= @movie.rating %> &bull; <%= @movie.duration %>
  </h3>

  <h3>Cast</h3>
  <p>
    <%= @movie.cast %>
  </p>

  <h3>Director</h3>
  <p>
    <%= @movie.director %>
  </p>

  <h3>Total Gross</h3>
  <p>
    <%= format_total_gross(@movie) %>
  </p>

  <h3>Average Review</h3>
  <p>
    <%= format_average_stars(@movie) %>
  </p>

  <h3>Reviews</h3>
  <p>
    <%= link_to pluralize(@movie.reviews.size, "review"),
                movie_reviews_path(@movie) %>
  </p>
  <h3>
    <%= pluralize(@fans.count, 'like')%>
    <% if current_user %>
      <% if @currently_liked %>
        <%= button_to 'Unlike It!', movie_like_path(@movie, @currently_liked), method: :delete, class: "unlike" %>
      <% else %>
        <%= button_to 'Like It!', movie_likes_path(@movie), class: "like" %>
      <% end %>
    <% end %>
    <% if @fans.any? %>
    <h3>Fans</h3>
      <ul>
        <% @fans.each do |user| %>
          <li>
            <%= link_to user.name, user %>
          </li>
        <% end %>
      </ul>
    <% end %>
  <h3>
  <footer>
    <%= link_to "Write Review", new_movie_review_path(@movie),
                class: 'button ok review' %>
    <nav>
      <% if is_an_admin? %>
        <%= link_to 'Edit', edit_movie_path(@movie), class: 'button' %>
        <%= link_to 'Delete', @movie,
                    class: 'button',
                    method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </nav>
  </footer>
</article>
