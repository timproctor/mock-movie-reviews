<article id="user">
  <% content_for :title, @user.name %>
  <header>
    <h1><%= @user.name %></h1>
    <h2><%= mail_to(@user.email) %></h2>
  </header>
  <% content_for :sidebar_content do %>
    <%= render 'sidebar_content' %>
  <% end %>

  <footer>
    <nav>
    <% if current_user?(@user) %>
      <%= link_to 'Edit Account', edit_user_path(@user), class: 'button' %>
      <%= link_to 'Delete Account', @user,
                method: :delete,
                data: { confirm: 'Are you sure you want to permanently delete your account?' },
                class: 'button' %>
    <% end %>
    </nav>
  </footer>
</article>
